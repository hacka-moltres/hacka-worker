{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src/server/declarations"
        ],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "alwaysStrict": true,
        "allowJs": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "bin/server"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "compileOnSave": false
}